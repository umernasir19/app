            android:text="NAME:Dr Rabb \n Qualification:M.B.B.S (Dow) MHSc (Canada) D,Derm (UK) \n Timing:DAily excepy sundays 6.30 - 9.30 pm \n Location:Park Lane Hospital,56, Old Clifton, Shahra-e-Iran, Block 5, Clifton, Karachi"
            android:layout_height="320dp"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:layout_weight="0.4"
    />

    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Appoint"
            android:id="@+id/call"

    />


</LinearLayout>

